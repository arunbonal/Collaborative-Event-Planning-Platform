<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Feedback</title>
</head>
<body>
    <h1>Edit Feedback</h1>
    <form action="/feedback/<%= feedback.feedback_id %>?_method=PATCH" method="POST">
        <label>Owner:</label>
        <select name="owner_id" required>
            <% users.forEach(user => { %>
                <option value="<%= user.user_id %>" <%= user.user_id === feedback.owner_id ? 'selected' : '' %>><%= user.name %></option>
            <% }); %>
        </select><br>

        <label>Event:</label>
        <select name="event_id" required>
            <% events.forEach(event => { %>
                <option value="<%= event.event_id %>" <%= event.event_id === feedback.event_id ? 'selected' : '' %>><%= event.title %></option>
            <% }); %>
        </select><br>

        <label>Rating:</label>
        <input type="number" name="rating" min="1" max="5" value="<%= feedback.rating %>" required><br>

        <label>Comments:</label>
        <textarea name="comments"><%= feedback.comments %></textarea><br>

        <button type="submit">Update Feedback</button>
    </form>
</body>
</html>
